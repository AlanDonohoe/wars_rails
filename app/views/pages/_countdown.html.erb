<div class="flex-container full-screen" id="main-container" style="display:none">
  <div class="border-wrapper">
    <div class="flex-item">
      <%= image_tag('date_grey_2x', class: "date") %>
    </div>
    <div class="flex-item">
      <div class="clock"></div>
    </div>
  </div>
  <div class="flex-item pth">
    <a class="button stencil-font large-text" href="#join-modal" rel="modal:open">Join W.A.R.S.</a>
  </div>
</div>

<div class="modal fade flex-container" id="join-modal" style="display:none;">
<div class="flex-item">
  <h2 class="stencil-font">Join The Red Stars</h2>
  <p>We will not share your email with any third parties or evil corporations</p>
  <form>
  <fieldset>
    <label for="nameField">Email</label>
    <input type="email" placeholder="gordon@onecorp.com" id="nameField">
    <input class="button-primary stencil-font" type="submit" value="Join">
  </fieldset>
</form>
</div>
</div>